<!-- Modal -->
<div class="modal fade" id="agregarEquipoModal" tabindex="-1" aria-labelledby="agregarEquipoModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="agregarEquipoModalLabel">Agregar nuevo equipo</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="equipoForm" novalidate>
          <div class="form-group mb-3">
            <label for="tipoEquipo">Tipo de Equipo:</label>
            <select class="form-control" id="tipoEquipo" name="tipoEquipo">
              <option value="" selected disabled>Seleccione una opción</option>
              {{#each tipoEquipos}}
              <option value="{{this.dataValues.nombre}}">{{this.dataValues.nombre}}</option>
              {{/each}}
              <option value="aa">aa</option>
              <option value="otro">Otro</option>
            </select>
            <div class="invalid-feedback">
              Por favor, seleccione una opción.
            </div>
            <div id="nuevoTipo" class="form-group mb-3" style="display: none;">
              <label for="nuevoTipoInput">Nuevo tipo:</label>
              <input type="text" class="form-control" id="nuevoTipoInput" name="nuevoTipoInput">
            </div>
          </div>
          <div class="form-group mb-3">
            <label for="marca">Marca:</label>
            <select class="form-control" id="marca" name="marca">
              <option value="" selected disabled>Seleccione una opción</option>
              {{#each marcas}}
              <option value="{{this.dataValues.nombre}}">{{this.dataValues.nombre}}</option>
              {{/each}}
              <option value="otra">Otra</option>
            </select>
            <div class="invalid-feedback">
              Por favor, seleccione una opción o ingrese una nueva marca.
            </div>
            <div id="nuevaMarca" class="form-group mb-3" style="display: none;">
              <label for="nuevaMarcaInput">Nueva Marca:</label>
              <input type="text" class="form-control" id="nuevaMarcaInput" name="nuevoTipoInput">
            </div>
          </div>
          <div class="form-group mb-3">
            <label for="modelo">Modelo:</label>
            <select class="form-control" id="modelo" name="modelo">
              {{!-- <option value="aa">aa</option>
              <option value="otro">Otro</option> --}}
            </select>
            <div class="invalid-feedback">
              Por favor, seleccione una opción o ingrese un nuevo modelo.
            </div>
            <div id="nuevoModelo" class="form-group mb-3" style="display: none;">
              <label for="nuevoModeloInput">Nuevo Modelo:</label>
              <input type="text" class="form-control" id="nuevoModeloInput" name="nuevoModeloInput">
            </div>
          </div>
          <div class="form-group mb-3">
            <label for="numeroDeSerie">Número de Serie:</label>
            <input type="text" class="form-control" id="numeroDeSerie" name="numeroDeSerie" required>
            <div class="invalid-feedback">
              Por favor, introduzca un número de serie válido.
            </div>
          </div>
          <div class="form-group mb-3">
            <label for="numeroDePatrimonio">Número de Patrimonio:</label>
            <input type="text" class="form-control" id="numeroDePatrimonio" name="numeroDePatrimonio">
          </div>
          <div class="form-group mb-3">
            <label for="observacion">Observación:</label>
            <textarea class="form-control" id="observacion" name="observacion" rows="3"></textarea>
          </div>
          <div class="form-group mb-3">
            <label for="especificacionesTecnicas">Especificaciones Técnicas:</label>
            <textarea class="form-control" id="especificacionesTecnicas" name="especificacionesTecnicas" rows="3">
              </textarea>
          </div>
          <div class="mt-3 text-center">
            <button type="submit" class="btn btn-primary">Crear equipo</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>