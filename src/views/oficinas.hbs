<main class="flex-grow-1">

  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Oficinas del MT</h1>
      {{> menu}}
    </div>

    <h5>Total de oficinas en esta ubicacion: {{count oficinas}}</h5>

    <div class="row row-cols-1 row-cols-3 g-4 mt-5">
      {{#each oficinas}}
      <div class="col">
        <a href="/{{this.dataValues.id}}" class="btn ">
          <div class="card shadow border-1">
            <img src="/assets/oficina.jpg" class="card-img-top" alt="imagen simbolica de una oficina">
            <div class="card-body">
              <h5 class="card-title">{{this.dataValues.nombre}}</h5>
              <p class="card-text">
              <ul class="list-group">
                <li class="list-group-item"><span class="fw-bold">Telefono:</span> {{this.dataValues.telefono}}</li>
                <li class="list-group-item"><span class="fw-bold">Email:</span> {{this.dataValues.email}}</li>
                <li class="list-group-item fs-4">
                  <span class=""><i class="bi bi-person-arms-up ms-2"></i><span class="me-2"> {{count this.dataValues.Empleados}}</span></span>
                  <span class=""><i class="bi bi-pc-display ms-2"></i><span class="me-2"> {{count this.dataValues.EquipoInformaticos}}</span></span>
                  <span class=""><i class="bi bi-building-fill-down ms-2"></i><span class="me-2"> {{count this.dataValues.Dependencias}}</span></span>
                </li> 
              </ul>
              </p>
            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </div>

  </div>
</main>
<script src="/js/{{fileJs}}"></script>