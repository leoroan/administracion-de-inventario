<main class="flex-grow-1">

  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Oficinas del MT</h1>
      {{> menu}}
    </div>

    <h2>seleccione la oficina correspondiente para agregar al empleado</h2>

    <table class="table table-striped table-hover text-center">
      <thead class='table-dark'>
        <tr>
          {{!-- <th scope="col">#</th> --}}
          <th scope="col">Nro. ID</th>
          <th scope="col">NOMBRE</th>
        </tr>
      </thead>
      <tbody class='table-group-divider' id="tableBody">
        {{#each oficinas}}
        <tr data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}" aria-expanded="false"
          aria-controls="collapse{{@index}}">
          {{!-- <th scope="row">{{@index}}</th> --}}
          <td>{{this.dataValues.id}}</td>
          <td>{{this.dataValues.nombre}}</td>
        </tr>
        <tr>
          <td colSpan="6" class="p-0">
            <div class="collapse" id="collapse{{@index}}">
              <div class="card card-body">
                <div class="card-group">
                  <div class="card w-50 text-center border-3">
                    <div class="card-body">
                      <h6 class="card-title">SUB OFICINAS</h6>
                      <p class="card-text">
                        {{#each this.dataValues.Dependencias}}

                      <table class="table table-striped table-hover text-center">
                        <thead class='table-dark'>
                          <tr>
                            {{!-- <th scope="col">#</th> --}}
                            <th scope="col">Nro. ID</th>
                            <th scope="col">NOMBRE</th>
                          </tr>
                        </thead>
                        <tbody class='table-group-divider' id="tableBody2">
                          <tr data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}" aria-expanded="false"
                            aria-controls="collapse{{@index}}">
                            {{!-- <th scope="row">{{@index}}</th> --}}
                            <td>{{this.id}}</td>
                            <td>{{this.nombre}}</td>
                          </tr>
                        </tbody>
                      </table>
                      {{/each}}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</main>
<script src="/js/{{fileJs}}"></script>