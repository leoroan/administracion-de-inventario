<main class="flex-grow-1">
  <div class="container">

    <div class="d-flex justify-content-between">
      <h1>Inventario</h1>
    </div>
    {/* //Esto deberia ser un componente ya que se repite en todos */}
    <input type="text" placeholder="Buscar..." value={searchTerm} onChange={(e)=> setSearchTerm(e.target.value)}
    />
    <h5> Listado de items en el inventario </h5>
    {
    isLoading
    ? <p> Trayendo los equipos...</p>
    : errors
    ? <p> Ocurrio un error: {errors.message} </p>
    :
    <ul class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 my-4">

      <table class="table table-striped table-hover ">
        <thead class='table-dark'>
          <tr>
            <th scope="col">#</th>
            <th scope="col">ACTUALIZADO</th>
            <th scope="col">MT</th>
            <th scope="col">TIPO</th>
            <th scope="col">USUARIO</th>
            <th scope="col">OFICINA </th>
          </tr>
        </thead>
        <tbody class='table-group-divider'>
          {searchResults.map((inv, id) => (
          [
          <tr key={`row-${id}`} data-bs-toggle="collapse" data-bs-target={`#collapse${id}`} aria-expanded="false"
            aria-controls={`collapse${id}`}>
            <th scope="row">{id}</th>
            <td>{new Date(inv.updatedAt).toLocaleDateString()}</td>
            <td>{inv.mt}</td>
            <td>{inv.TipoEquipo?.nombre || "vacio"}</td>
            <td>{inv.Empleado.nombre + " " + inv.Empleado.apellido}</td>
            <td>{inv.Oficinas.map((oficina, index) => (
              <span key={`oficina-${index}`}>{oficina.nombre}</span>
              ))}
            </td>
          </tr>,
          <tr key={`collapse-${id}`}>
            <td colSpan="6" class="p-0">
              <div class="collapse" id={`collapse${id}`}>
                <div class="card card-body">

                  <div class="card-group mb-2">
                    <div class="card w-50 text-center border-info border-3 ">
                      <div class="card-body">
                        <h6 class="card-title">Nro de serie</h6>
                        <p class="card-text">{inv.numeroDeSerie}</p>
                      </div>
                    </div>
                    <div class="card w-50 text-center border-info border-3 ">
                      <div class="card-body">
                        <h6 class="card-title">Nro de Patrimonio</h6>
                        <p class="card-text">{inv.numeroDePatrimonio}</p>
                      </div>
                    </div>
                    <div class="card w-50 text-center border-info border-3 ">
                      <div class="card-body">
                        <h6 class="card-title">Observacion</h6>
                        <p class="card-text">{inv.observacion}</p>
                      </div>
                    </div>
                  </div>
                  <div class="card-group">
                    <div class="card w-50 text-center border-info border-3 ">
                      <div class="card-body">
                        <h6 class="card-title">Especificaciones Tecnicas</h6>
                        <p class="card-text">{inv.especificacionesTecnicas}</p>
                      </div>
                    </div>
                    <div class="card w-50 text-center border-info border-3 ">
                      <div class="card-body">
                        <h6 class="card-title">Especificaciones Tecnicas</h6>
                        <p class="card-text">{inv.especificacionesTecnicas}</p>
                      </div>
                    </div>
                    <div class="card w-50 text-center border-info border-3 ">
                      <div class="card-body">
                        <h6 class="card-title">Edificio/Lugar</h6>
                        <p class="card-text">{inv.Oficinas.map((oficina, index) => (
                          <span key={`oficina-${index}`}>{oficina.LugarId === 1 ? "Calle 10" : "otro"}</span>
                          ))}
                        </p>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </td>
          </tr>
          ]
          ))}
        </tbody>
      </table>
    </ul>
    }
  </div>
</main>
<script src="/js/{{fileJs}}"></script>